[user]
	name = adylanroaffa
	email = adylan.dev@gmail.com

[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	autocrlf = input

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = current
	autoSetupRemote = true

[alias]
	# Status & Info
	st = status
	s = status -s

	# Branch
	br = branch
	co = checkout
	cob = checkout -b

	# Commit
	ci = commit
	cm = commit -m
	ca = commit --amend
	can = commit --amend --no-edit

	# Log
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ll = log --pretty=format:'%C(yellow)%h%Cred%d %Creset%s%Cblue [%cn]' --decorate --numstat
	ls = log --pretty=format:'%C(yellow)%h %Cred%d %Creset%s%Cblue [%cn]' --decorate
	last = log -1 HEAD --stat

	# Diff
	df = diff
	dfs = diff --staged

	# Reset
	unstage = reset HEAD --
	undo = reset --soft HEAD~1

	# Remote
	pu = push
	pl = pull

	# Stash
	sl = stash list
	sa = stash apply
	ss = stash save

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

[diff]
	tool = nvimdiff

[merge]
	tool = nvimdiff
	conflictstyle = diff3

[rerere]
	enabled = true
